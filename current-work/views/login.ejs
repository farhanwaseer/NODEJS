<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini-App</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900">
    <!-- Navbar -->
    <nav
      class="fixed top-0 border-solid border-gray-200 w-full border-b py-3 bg-white z-50"
    >
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap items-center justify-between">
          <a href="https://pagedone.io/" class="flex items-center">
            <img
              src="https://www.freepnglogos.com/uploads/glock-png-logo/glock-safe-action-pistols-png-logo-16.png"
              alt="brand image"
              class="w-10 h-10"
            />
            <h3 class="text-zinc-700 text-lg md:text-2xl ml-2">Mini-App</h3>
          </a>
          <div class="flex flex-wrap items-center space-x-4 mt-4 md:mt-0">
            <a class="text-zinc-800 text-lg md:text-xl" href="/">Home</a>
            <a href="/signup">
              <button
                class="bg-blue-700 text-white py-2 px-4 rounded-md text-sm md:text-lg hover:bg-blue-800 transition duration-200"
              >
                Sign Up
              </button>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="p-6 pt-20 w-full min-h-screen bg-zinc-900 text-white">
      <h3 class="text-2xl md:text-3xl text-center mb-6">Login to Account</h3>
      <form
        class="bg-zinc-700 p-6 md:p-12 rounded-md w-full md:w-1/2 mx-auto"
        action="/login"
        method="post"
      >
        <input
          required
          class="block w-full px-3 py-2 bg-zinc-800 text-white rounded-md mt-3 border-2 border-zinc-600 outline-none placeholder-zinc-400"
          type="email"
          placeholder="Email"
          name="email"
        />
        <input
          required
          class="block w-full px-3 py-2 bg-zinc-800 text-white rounded-md mt-3 border-2 border-zinc-600 outline-none placeholder-zinc-400"
          type="password"
          placeholder="Password"
          name="password"
        />
        <input
          class="w-full bg-blue-700 text-white py-3 rounded-md mt-6 cursor-pointer hover:bg-blue-800 transition duration-200"
          type="submit"
          value="Login"
        />
      </form>
    </div>
  </body>
</html>
